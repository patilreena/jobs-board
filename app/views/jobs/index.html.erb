<div class="container">
<%= link_to "Add a job", new_job_path %>
</div>
<h1>Jobs</h1>
<div class="container">
 <table class="table">
  <thead>
    <tr>
      <th>Job name</th>
      <th>Company</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to job.title, job.url %></td>
        <td><%= job.company %></td>
        <td>
          <%= link_to "Delete", job_path(job), method: :delete, data: {confirm: "Really delete this job?"} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<p><%= paginate @jobs %></p>
